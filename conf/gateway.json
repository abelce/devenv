{
    "sslChainCrtPath": "/go/bin/ssl/chain.crt",
    "sslKeyPath": "/go/bin/ssl/varitrip.key",
    "apis": [
        {
            "key": "users",
            "scheme": "http",
            "host": "auth:3061",
            "path": "/"
        },
        {
            "key": "auth",
            "scheme": "http",
            "host": "merchant:3062",
            "path": "/"
        },
        {
            "key": "operators",
            "scheme": "http",
            "host": "merchant:3062",
            "path": "/"
        },
        {
            "key": "articles",
            "scheme": "http",
            "host": "article:9008",
            "path": "/"
        },
        {
            "key": "likecount",
            "scheme": "http",
            "host": "like:3063",
            "path": "/"
        },
        {
            "key": "like",
            "scheme": "http",
            "host": "like:3063",
            "path": "/"
        },
        {
            "key": "comment",
            "scheme": "http",
            "host": "comment:3064",
            "path": "/"
        },
        {
            "key": "stypes",
            "scheme": "http",
            "host": "stypes:3065",
            "path": "/"
        }
    ],
    "noVerify": {
        "articles": {
            "methods": {
                "get": {
                    "urls": [
                        "/v1/articles",
                        "/v1/articles/list"
                    ],
                    "regs": [
                        "^\/v1\/articles\/[a-z0-9-]+$"
                    ],
                    "all": true
                }
            }
        },
        "auth": {
            "methods": {
                "post": {
                    "urls": [
                        "/v1/auth"
                    ]
                }
            }
        },
        "registry": {
            "methods": {
                "post": {
                    "urls": [
                        "/v1/registry"
                    ]
                }
            }
        },
        "comment": {
            "methods": {
                "get": {
                    "urls": [
                        "/v1/comment",
                        "/v1/comment/list",
                        "/v1/comment/client/list"
                    ]
                }
            }
        },
        "merchant": {
            "methods": {
                "get": {
                    "urls": [
                        "/v1/operators/info",
                        "/v1/operators"
                    ],
                    "regs": [
                        "^\/v1\/operators\/github\/callback?.*$"
                    ]
                }
            }
        },
        "stypes": {
            "methods": {
                "get": {
                    "urls": [
                        "/v1/stypes"
                    ]
                }
            }
        },
        "likecount": {
            "methods": {
                "get": {
                    "regs": [
                        "^\/v1\/likecount\/[a-z0-9-]+$"
                    ]
                }
            }
        },
        "like": {
            "methods": {
                "get": {
                    "regs": [
                        "^\/v1\/like\/check\/[a-z0-9-]+$"
                    ]
                }
            }
        }
    }
}